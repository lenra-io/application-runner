{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/container_validator.schema.json",
    "title": "Container",
    "description": "Element of type Container",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^container$"
        },
        "children": {
            "type": "array",
            "description": "Listeners on the element",
            "items": {
                "type": "object"
            }
        },
        "direction": {
            "type": "string",
            "description": "'row' or 'col' which will define the Axis for placing children. Defaults to row",
            "pattern": "^row$|^col$"
        }
    },
    "required": [
        "type",
        "children"
    ],
    "additionalProperties": true
}