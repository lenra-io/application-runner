{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/radio_validator.schema.json",
    "title": "Radio",
    "description": "Element of type Radio",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^radio$"
        },
        "value": {
            "description": "The value of the radio",
            "type": "string"
        },
        "groupValue": {
            "description": "The value group of the radio",
            "type": "string"
        },
        "label": {
            "description": "The label showed aside of the radio",
            "type": "string"
        },
        "disabled": {
            "description": "Whether the radio should be disabled or not",
            "type": "boolean"
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onChange": {
                    "$ref": "listeners/onchange_validator.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value",
        "groupValue",
        "label"
    ],
    "additionalProperties": false
}