{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/table_validator.schema.json",
    "title": "Table",
    "description": "Element of type Table",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^table$"
        },
        "children": {
            "type": "array",
            "description": "Listeners on the element",
            "items": {
                "type": "object"
            }
        },
        "centerChildren": {
            "type": "boolean",
            "description": "Whether the children of the table should be centered or not"
        },
        "border": {
            "type": "boolean",
            "description": "Whether a border should be added or not"
        }
    },
    "required": [
        "type",
        "children"
    ],
    "additionalProperties": false
}