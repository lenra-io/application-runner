{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/button_validator.schema.json",
    "title": "Button",
    "description": "Element of type Button",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^button$"
        },
        "value": {
            "description": "the value displayed in the element",
            "type": "string"
        },
        "disabled": {
            "description": "Whether the button should be disabled or not",
            "type": "boolean"
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onClick": {
                    "$ref": "listeners/onclick_validator.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}