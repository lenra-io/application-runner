{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/image_validator.schema.json",
    "title": "Image",
    "description": "Element of type Image",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^image$"
        },
        "path": {
            "description": "The image path from the resources folder",
            "type": "string"
        },
        "width": {
            "description": "The image width",
            "type": "number"
        },
        "height": {
            "description": "The image height",
            "type": "number"
        }
    },
    "required": [
        "type",
        "path"
    ],
    "additionalProperties": false
}